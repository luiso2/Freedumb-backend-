{
  "name": "freedumb-backend",
  "version": "1.0.0",
  "description": "Personal Financial Management System with AI Integration",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/freedumb-backend.git"
  },
  "keywords": [
    "finance",
    "budgeting",
    "personal-finance",
    "ai",
    "microservices",
    "nodejs",
    "express",
    "postgresql",
    "openai"
  ],
  "author": "FREEDUMB Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') !== -1) throw new Error('Please use npm')\"",
    "install:all": "npm run install:services && npm run install:workers",
    "install:services": "cd services/auth && npm install && cd ../transaction && npm install && cd ../budget && npm install && cd ../ai && npm install && cd ../investment && npm install && cd ../analytics && npm install && cd ../notification && npm install",
    "install:workers": "cd workers && npm install",
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:transaction\" \"npm run dev:budget\" \"npm run dev:ai\" \"npm run dev:investment\" \"npm run dev:analytics\"",
    "dev:auth": "cd services/auth && npm run dev",
    "dev:transaction": "cd services/transaction && npm run dev",
    "dev:budget": "cd services/budget && npm run dev",
    "dev:ai": "cd services/ai && npm run dev",
    "dev:investment": "cd services/investment && npm run dev",
    "dev:analytics": "cd services/analytics && npm run dev",
    "dev:notification": "cd services/notification && npm run dev",
    "start": "npm run start:services",
    "start:services": "concurrently \"npm run start:auth\" \"npm run start:transaction\" \"npm run start:budget\" \"npm run start:ai\" \"npm run start:investment\" \"npm run start:analytics\"",
    "start:auth": "cd services/auth && npm start",
    "start:transaction": "cd services/transaction && npm start",
    "start:budget": "cd services/budget && npm start",
    "start:ai": "cd services/ai && npm start",
    "start:investment": "cd services/investment && npm start",
    "start:analytics": "cd services/analytics && npm start",
    "start:notification": "cd services/notification && npm start",
    "start:workers": "cd workers && npm start",
    "test": "npm run test:services",
    "test:services": "cd services/auth && npm test && cd ../transaction && npm test && cd ../budget && npm test && cd ../ai && npm test",
    "test:unit": "npm run test -- --testPathPattern=tests/unit",
    "test:integration": "npm run test -- --testPathPattern=tests/integration",
    "test:e2e": "npm run test -- --testPathPattern=tests/e2e",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint services/**/src/**/*.js workers/**/*.js",
    "lint:fix": "eslint services/**/src/**/*.js workers/**/*.js --fix",
    "migrate": "cd services/transaction && npm run migrate",
    "migrate:undo": "cd services/transaction && npm run migrate:undo",
    "seed": "cd services/transaction && npm run seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:status": "kubectl get pods -n freedumb",
    "k8s:logs": "kubectl logs -f -n freedumb",
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan",
    "terraform:apply": "cd terraform && terraform apply",
    "terraform:destroy": "cd terraform && terraform destroy",
    "setup:dev": "npm run install:all && npm run docker:up && sleep 10 && npm run migrate && npm run seed",
    "setup:production": "npm run install:all && npm run k8s:apply",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'package-lock.json' -delete"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
