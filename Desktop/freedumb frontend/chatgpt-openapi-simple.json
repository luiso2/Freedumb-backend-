{
  "openapi": "3.0.0",
  "info": {
    "title": "FREEDUMB Financial API - Simplified",
    "description": "Version simplificada con solo los 2 endpoints esenciales",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://backend-production-053c.up.railway.app/api"
    }
  ],
  "paths": {
    "/transactions/nlp": {
      "post": {
        "operationId": "saveTransaction",
        "summary": "Guardar transacción",
        "description": "Guarda una transacción desde lenguaje natural. Ejemplo: 'Gasté $50 en Uber'",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input": {
                    "type": "string",
                    "description": "Descripción de la transacción",
                    "example": "Gasté $50 en Uber"
                  }
                },
                "required": ["input"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transacción guardada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transaction": {
                      "type": "object",
                      "properties": {
                        "amount": {
                          "type": "number"
                        },
                        "category": {
                          "type": "string"
                        },
                        "merchant": {
                          "type": "string"
                        },
                        "date": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/widget/generate": {
      "post": {
        "operationId": "generateWidget",
        "summary": "Generar widget interactivo",
        "description": "Genera un link a un dashboard interactivo con los datos del usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "widgetType": {
                    "type": "string",
                    "enum": ["dashboard", "transactions", "budgets", "insights"],
                    "default": "dashboard",
                    "description": "Tipo de widget"
                  },
                  "period": {
                    "type": "string",
                    "enum": ["day", "week", "month", "year"],
                    "default": "month",
                    "description": "Período de tiempo"
                  }
                },
                "required": ["widgetType"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "URL del widget generada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "widgetUrl": {
                      "type": "string",
                      "example": "https://freedumb.app/widget?user=123&token=xyz"
                    },
                    "expiresAt": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
